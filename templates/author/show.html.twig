{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ author.surname }}</td>
            </tr>
            <tr>
                <th>Country of origin</th>
                <td>{{ author.countryOfOrigin }}</td>
            </tr>
            <tr>
                <th>Year of Birth</th>
                <td>{{ author.yearOfBirth ? author.yearOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Year of Dead</th>
                <td>{{ author.yearOfDead ? author.yearOfDead|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date of creation</th>
                <td>{{ author.entryDate ? author.entryDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date of last modification</th>
                <td>{{ author.lastModyfication ? author.lastModyfication|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('author_index') }}">back to list</a>

    <a class="btn btn-primary" role="button" href="{{ path('author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}

    <h2> Books of author {{ author.name }} {{ author.surname }}</h2>
    <h4>{{ books }} </h4>
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Publish Year</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for book in author.books %}
            <tr>
                <td>{{ book.title }}</td>
                <td> <a class="btn btn-primary" role="button" href="{{ path('book_genre_show',{'id':book.genre.id}) }}">{{ book.genre.name }}</a></td>
                <td>{{ book.publish }}</td>
                <td>
                    <a class="btn btn-primary" role="button" href="{{ path('book_show', {'id': book.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
