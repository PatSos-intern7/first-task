{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block body %}
    <h1>Product</h1>
    <div class="container"> Main image
        {% if product.image is defined %}
            <img style="width: 25%; height: 25%" src="{{ asset('uploads/' ~ product.image) }}" class="img-fluid mx-auto d-block" alt="">
        {% else %}
        <p>No images found</p>
        {% endif %}
    </div>
    <div class="container" > Image Gallery
        <div class="row ">
            {% for image in product.imageGallery %}
            <img style="width: 25%; height: 25%" src="{{ asset('uploads/' ~ image.name) }}" class="img-fluid mx-auto d-block" alt="">
                {{ include('image/_delete_form.html.twig') }}
            {% else %}
                <p>No images found</p>
            {% endfor %}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td><a href="{{ path('product_category_show', {'id': product.category.id}) }}">{{ product.category.name }}</a></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>DateOfCreation</th>
                <td>{{ product.dateOfCreation ? product.dateOfCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateOfLastModification</th>
                <td>{{ product.dateOfLastModification ? product.dateOfLastModification|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('product_index') }}">back to list</a>

    <a class="btn btn-primary" role="button" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
