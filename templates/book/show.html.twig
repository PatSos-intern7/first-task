{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <div class="container" >
        <div class="col-md-2 px-1">
            <img src="{{ asset('uploads/' ~ book.CoverImage) }}" class="img-fluid mx-auto d-block" alt="">
        </div>
    </div>
    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author.name }}</td>
            </tr>
            <tr>
                <th>Publish</th>
                <td>{{ book.Publish ? book.Publish|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ book.entryDate ? book.entryDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Last Modification</th>
                <td>{{ book.lastModyfication ? book.lastModyfication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ book.country }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ book.availability ? 'Dostępna' : 'Wypożyczona' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('book_index') }}">back to list</a>

    <a class="btn btn-primary" role="button" href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
