{% extends 'base.html.twig' %}

{% block title %}BookGenre{% endblock %}

{% block body %}
    <h1>Book Genre {{ book_genre.name }}</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ book_genre.name }}</td>
            </tr>
            <tr>
                <th>Books with genre</th>
                <td>{{ book_genre.books|length }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book_genre.description }}</td>
            </tr>
            <tr>
                <th>Edit count</th>
                <td>{{ book_genre.editCount }}</td>
            </tr>
            <tr>
                <th>Date of creation</th>
                <td>{{ book_genre.entryDate ? book_genre.entryDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date of last modification</th>
                <td>{{ book_genre.lastModyfication ? book_genre.lastModyfication|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2> Books in genre {{ book_genre.name }}</h2>
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publish Year</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for book in book_genre.books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author.name }} {{ book.author.surname }}<a></a></td>
                <td>{{ book.publish }}</td>
                <td>
                    <a class="btn btn-primary" role="button" href="{{ path('book_show', {'id': book.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('book_genre_index') }}">back to list</a>

    <a class="btn btn-primary" role="button" href="{{ path('book_genre_edit', {'id': book_genre.id}) }}">edit</a>

    {{ include('book_genre/_delete_form.html.twig') }}
{% endblock %}
